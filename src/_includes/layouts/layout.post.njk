---
layout: layouts/layout.base.njk
templateClass: tmpl-post
---

{% from "components/TagLink.njk" import TagLink %}

{% include "header.njk" %}

<main>
  <div class="relative bg-white overflow-hidden">

    <h1>
      <div class="relative bg-indigo-600 px-4 sm:px-6 lg:px-8">
        {% if img %}
          <div class="absolute inset-0">
          <img class="w-full h-full object-cover" src="{{ img }}">
            <div class="absolute inset-0 bg-indigo-300 mix-blend-multiply" aria-hidden="true"></div>
          </div>
        {% endif %}
        <div class="text-lg relative py-16 sm:py-24 max-w-prose mx-auto">
        <h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl lg:text-6xl">{{ title }}</h1>
        <p class="mt-6 text-xl text-indigo-100 max-w-3xl">{{ description }}</p>
        </div>
      </div>
    </h1>

    <div class="relative px-4 sm:px-6 lg:px-8">

      <div class="text-lg max-w-prose mx-auto p-4">

        <span class="block text-base text-center leading-8 text-indigo-600 font-semibold tracking-wide">
          {{ author.name }}
          <span aria-hidden="true">
            &middot;
          </span>
          <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
        </span>

        <div class="flex items-center justify-center bg-white">
          <div class="flex flex-col space-y-4 sm:space-y-0 sm:flex-row sm:space-x-4">
            {%- for tag in tags | customTags -%}
              {{ TagLink(tag) }}
            {%- endfor %}
          </div>
        </div>

      </div>
      <div class="mt-6 prose prose-indigo prose-lg text-gray-500 mx-auto">
        {{ content | safe }}
        {% include "disqus.njk" %}
      </div>

    </div>
  </div>
</main>

{% include "footer.njk" %}
