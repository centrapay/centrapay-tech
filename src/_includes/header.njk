<header class="bg-indigo-600">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" aria-label="Top">
    <div class="w-full py-6 flex items-center justify-between border-b border-indigo-500 lg:border-none">
      <div class="flex items-center">
        <a href="/">
          <span class="sr-only">{{ metadata.title }}</span>
          <svg class="h-12 w-auto fill-current text-white" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M12 3H14.25C17.9559 3 20.9689 6.0625 21 9.75C21 13.5 17.987 16.5 14.25 16.5H12V12.0026H9.75C8.50433 12.0026 7.46886 13.0058 7.5 14.25C7.5 15.4942 8.50433 16.5 9.75 16.5H12V20.9922L9.75 21C6.01298 21 3 17.9827 3 14.25C3 10.5173 6.01298 7.5 9.75 7.5H12V12H14.25C15.4957 12 16.4998 11 16.4998 9.75C16.4998 8.5 15.4957 7.5 14.25 7.5H12V3Z" fill="currentColor"/>
          </svg>
        </a>
        <div class="hidden ml-10 space-x-8 lg:block">

          {%- for entry in metadata.nav %}
            <a
              class="text-base font-medium text-white hover:text-indigo-50"
              href="{{ entry.url | url }}"
              key="{{ entry.title }}">
              {{ entry.title }}
            </a>
          {%- endfor %}

        </div>
      </div>
    </div>
    <div class="py-4 flex flex-wrap justify-center space-x-6 lg:hidden">

        {%- for entry in metadata.nav %}
          <a
            class="text-base font-medium text-white hover:text-indigo-50"
            href="{{ entry.url | url }}"
            key="{{ entry.title }}">
            {{ entry.title }}
          </a>
        {%- endfor %}

    </div>
  </nav>
</header>
